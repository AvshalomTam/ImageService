@model List<ImageServiceWeb.Models.Photo>

@{
    ViewBag.Title = "Photos";
}

<h2>Photos</h2>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@item.t_RelativePath" class="img-circle" alt="Cinque Terre">
                <div class="caption">
                    <h3>@item.PicName</h3>
                    <p>Date taken: @item.DateTaken</p>
                    <p>
                        <a href="#" class="btn btn-primary" role="button" style="background-color:blue;color:white">View</a>
                        <a href="#" class="btn btn-default" role="button" style="background-color:red;color:white">Delete</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
}